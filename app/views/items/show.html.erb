<script type="text/javascript">
  setInterval(function() { if($('#time').html() != "This Item Has Expired") {
      $.getScript("<%= @item %>.js"); }
      },1000);
</script>
<div style="text-align: center">

  Closing Time: <%= @item.closing_time %><br/>
  Time now: <%= Time.now.getutc() %>

  <h1><%= @item.name %></h1>
  <p id="notice"><%= notice %></p>
  Name: <%= @item.name %><br/>
  Description: <%= @item.description %><br/>
  Starting Price: <%= @item.starting_price %><br/>
  Minimum Acceptance Price: <%= @item.min_accept_bid %><br/>
  <b style="color: red">
    <div id="time">
    </div>
  </b>

  <br/>
  <%= link_to 'Edit', edit_category_item_path(@category, @item) %> |
  <%= link_to 'Back', category_path(@category) %>
</div>
