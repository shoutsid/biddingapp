<div class="container-fluid" style="margin-top: 20px;">
  <div class="row-fluid">
    <div class="span9 well well-small" style="border: 1px solid;">
      <div class="span2 text-center">
        <div id="user_stats"
          data-title="<h4><%= @item.user.username.titleize %>'s Stats</h4>"
          data-content="<p>Items Posted: <%= @item.user.item_count %></p>
          <p>Active Items: <%= @item.user.not_closed_item_count %></p>
          <p>Previous Items: <%= @item.user.closed_item_count %></p>">
          <%= image_tag(@item.image, class: 'thumbnail', style: 'margin-bottom: 10px;') if @item.image? %>
        </div>
        Current Bid: <span id="current_bid_amount" style="font-size: 130%"><%= @item.highest_bid.amount %></span><br/>
        <span id="current_bid_user" style="font-size: 130%;">bid by: <%= @item.highest_bid.user.username %></span><br/>

        <div id="time" style="margin: 10px; font-size: 150%;"></div>
        <% if user_signed_in? %>
          <div id="item_bid">
            <%= render '/bids/form' %>
          </div>
        <% else %>
          You must be signed in to bid, <%= link_to 'sign in', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %>
        <% end %>
      </div>

      <div class="span10">
        <h4 class="text-center"><%= @item.name %></h4><br/>
        <p style="margin-bottom: 10px;"><%= @item.description %></p>
      </div>
    </div>

    <div class="span3 well well-small" style="border: 1px solid;">
      <h4><u>Top Bids</u></h4>
      <% @bids.each do |bid| %>
        <div id="topbids">
        <%= bid.user.username %> bidded <%= bid.amount %>, <%= time_ago_in_words(bid.created_at) %> ago.
        <hr/>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row-fluid">
    <%= link_to 'Back', category_path(@category) %>   
  </div>
</div>
