<div class="span4">


  <p id="notice"><%= notice %></p>

  <% @items.each_with_index do |item, i| %>
    <div style="border: 1px solid" id="item_<%= i %>">
      <% @item = item %>
      Name: <%= @item.name %><br/>
      Description: <%= @item.description %> <br/>
      link: <%= link_to 'show item', category_item_path(@category, item) %> <br/>
      Minimum Acceptance Price: <%= @item.min_accept_bid %><br/>
      Starting Price: <%= @item.starting_price %><br/>
      Current Bid:  <%= @item.highest_bid ? @item.highest_bid.amount : '<b style="color: red">no bids</b>'.html_safe %> <br/>
      <b style="color: red">
        <div id="time_left_<%= i %>">
        </div>
      </b>
      <hr/>

      <% if user_signed_in? %>
        <div id="item_bid_<%= i %>">
          <%= render '/bids/form' %>
        </div>
      <% else %>
        You must be a signed in to bid, <%= link_to 'sign in', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %>
      <% end %>

    </div>
    <hr/>
  <% end %>

  <p/>

  <div>
    <%= link_to 'Auction Item', new_category_item_path(@category) %> |
    <%= link_to 'Edit this category', edit_category_path(@category) %> |
    <%= link_to 'Back', categories_path %>
  </div>
</div>
